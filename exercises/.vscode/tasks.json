{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build all files in directory",
      "command": "/usr/bin/clang++", // Use clang++ instead of g++
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++23", // Use C++23 standard
        "${fileDirname}/*.cpp", // Include all .cpp files in the directory
        "-o",
        "${fileDirname}/game" // Output file name (you can change it to anything)
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}
